{
  "manifest_version": 2,
  "name": "Example Domain Blocker",
  "version": "1.0",
  "description": "Blocks access to specified websites",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "example-domain-blocker@example.com"
    }
  }
}
